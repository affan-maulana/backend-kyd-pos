# ========================
# Stage 1: Build NestJS app
# ========================
FROM node:18-alpine AS builder

WORKDIR /app

# Copy only package files to install dependencies
COPY package*.json ./

# Install only prod dependencies first (to cache better)
RUN npm ci --omit=dev

# Reinstall with dev dependencies (needed to build NestJS)
RUN npm install

# Install Nest CLI
RUN npm install -g @nestjs/cli

# Copy source code
COPY . .

# Build NestJS app to dist/
RUN npm run build


# ================================
# Stage 2: Production-only image
# ================================
FROM node:18-alpine AS production

WORKDIR /app

# Copy only needed files from builder
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/dist ./dist

# Expose port (sesuai dengan yang kamu pakai di main.ts)
EXPOSE 3000

# Jalankan aplikasi (pastikan package.json punya script: "start:prod": "node dist/main")
CMD ["npm", "run", "start:prod"]
