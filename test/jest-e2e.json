{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@repository/(.*)$": "<rootDir>/../src/repository/$1",
    "^@common/(.*)$": "<rootDir>/../src/common/$1",
    "^@module/(.*)$": "<rootDir>/../src/module/$1",
    "^src/(.*)$": "<rootDir>/../src/$1"
  }
}
